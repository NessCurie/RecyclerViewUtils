<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SwipyRefreshLayout">
        <attr name="refresh_mode">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="both" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="HFRefreshLayout">
        <attr name="footerNestLayout" format="reference" />
        <attr name="headerNestLayout" format="reference" />
    </declare-styleable>

    <declare-styleable name="QuickSideBarView">
        <attr name="sidebarTextColor" format="color|reference" />
        <attr name="sidebarChooseTextColor" format="color|reference" />
        <attr name="sidebarTextSize" format="dimension" />
        <attr name="sidebarChooseTextSize" format="dimension" />
    </declare-styleable>
</resources>
